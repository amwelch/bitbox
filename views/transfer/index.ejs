        <ul class="nav nav-sidebar">
          <li <% if (view == "pay") {%>class="active"<% } %>><a href="/transfer/pay">Pay</a></li>
          <li <% if (view == "track") {%>class="active"<% } %>><a href="/transfer/track">Track</a></li>
          <li <% if (view == "deposit") {%>class="active"<% } %>><a href="/transfer/deposit">Deposit</a></li>
          <li <% if (view == "withdraw") {%>class="active"<% } %>><a href="/transfer/withdraw">Withdraw</a></li>
          <li <% if (view == "redeem") {%>class="active"<% } %>><a href="/transfer/redeem">Redeem Code</a></li>
        </ul>
