  <% if (success === false) { %>  
    <div class="alert alert-danger"><strong>Sorry!</strong> Your request could not be completed.</div>
  <% } else if (success === true) { %>  
    <div class="alert alert-success"><strong>Success!</strong> Your request completed!</div>
  <% } %>  
    <% if (view == 'pay') { %>
      <% include pay.ejs %>
    <% } else if (view == 'track') { %>
      <% include track/index.ejs %>
    <% } else if (view == 'withdraw') { %>
      <% include withdraw.ejs %>
    <% } else if (view =='redeem') { %>
      <% include redeem.ejs %>
    <% } else if (view == 'deposit') { %>
      <% include deposit.ejs %>
    <% } else if (view == 'notifications') { %> 
      <% include notifications.ejs %>
    <% } %>  
    </div>
  </div>
</div>
