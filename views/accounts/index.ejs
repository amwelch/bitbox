<div class="container-fluid">
<div class="row">
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
<div class="col-sm-3 col-md-2 sidebar">
  <ul class="nav nav-sidebar">
  	<li <% if (view == "user") {%>class="active"<% } %>><a href="/accounts/user">General Information</a></li>
    <li <% if (view == "identity") {%>class="active"<% } %>><a href="/accounts/identity">Identity</a></li>
    <li <% if (view == "security") {%>class="active"<% } %>><a href="/accounts/security">Security</a></li>
  </ul>
</div>
<% if (view == 'user') { %>
  <div class="container-user container">
    <form class="form-signin" role="form" action="#" method="post">
        <h2>User Configuration</h2>
        <input id="inputFName" type="text"  name="firstname" class="user-form form-control" placeholder="First Name">
        <input id="inputLName" type="text"  name="lastname" class="user-form form-control" placeholder="Last Name">
        <div class="form-submit">
          <button class="user-btn btn btn-lg" type="submit"> Save</button>
          <button id="reset-button" class="user-btn btn btn-lg" type="submit"> Reset</button>
        </div>
  </div>
  <script>
    //Global data
    $(document).ready(function(){
        console.log("Running req");
        $("#reset-button").click(function(e){
            e.preventDefault();
            if (window.user != undefined){
               $('#inputFName').val(window.user['firstname']);
               $('#inputLName').val(window.user['lastname']);
            }
            $("#reset-button").blur();
        });
        $.ajax({
            url: '/api/userInfo',
            complete: function(info){
                if (info.status != 200){
                    console.log("Got non-200 ", info.status);
                   //Do nothing
                }
                else{
                    info = info.responseJSON;
                    console.log("here");
                    window.user = info;
                    console.log("there");
                    $('#inputFName').val(info['firstname']);
                    $('#inputLName').val(info['lastname']);
                }
            }
        });
    });
  </script>
<% } else if (view == 'security') { %>
  <h2>Two-Factor Authentication Coming Soon! </h2>
<% } else if (view == 'identity') { %>
  <h2>Identity Verification Coming Soon! </h2>
<% } %> 
</div>
</div>
</div>
