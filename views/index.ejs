<!DOCTYPE html>
<html>
  <head>
    <title>BitBox - <%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/toggle-switch.css' />
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Ubuntu:regular,bold&subset=Latin">
    <!--<script src="/jq/jquery-2.1.0.min.js"></script>-->
    <script src="/fb-autocomplete/jquery.js"></script>
    <script src="/fb-autocomplete/facebook-friend-autocomplete.js"></script>
    <link rel="stylesheet" href="/fb-autocomplete/facebook-friend-autocomplete.css">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/bootstrap/dashboard.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <div id="fb-root"></div>  
    <div data-spy="affix" data-offset-top="50" class="navbar navbar-bitbox navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="glow">&nbsp;</div>
          <img class="cropped" id="BitBox" src="/BitBox.png" />
          <a class="navbar-brand" href="#">BitBox</a>
        </div> 
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if (authenticated) { %>
              <%- include generic/in/header.ejs %>
            <% } else { %>
              <%- include generic/out/header.ejs %>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
    <% if (base == 'index') { %>
      <div class="jumbotron">
        <h1>Bitcoin. Gone social.</h1>
        <p class="lead">Welcome to BitBox, a revolutionary peer-to-peer payment platform.</p>
        <p><a class="btn btn-lg btn-success" href="/liftoff/login/facebook" role="button">Sign up today</a></p>
      </div>
      <%- include liftoff/index.ejs %>
    <% } else if (base == 'transfer') { %>
      <%- include transfer/index.ejs %>
    <% } else if (base == 'accounts') { %>
      <%- include accounts/index.ejs %>
    <% } %>
    <script src="/bootstrap/bootstrap.min.js"></script>
    <script src="/bootstrap/docs.min.js"></script>
    <script>$("#BitBox").click(function() {$("body").scrollTop(0);});</script>
    <script>
      $(document).ready(function(){
          console.log("Running req");
          $.ajax({
              url: '/api/userInfo',
              complete: function(info){
                  if (info.status != 200){
                     //Do nothing
                  }
                  else{
                      console.log("request fine");
                      info = info.responseJSON;
                      var name = undefined;
                      if (info.firstname)
                          name = info.firstname;
                      else if (info.lastname)
                          name = info.lastname;

                      if (name != undefined){
                          $("#accounts_link").text(name);
                      }
                  }
              }
          });
      });
    </script>
  </body>
</html>
